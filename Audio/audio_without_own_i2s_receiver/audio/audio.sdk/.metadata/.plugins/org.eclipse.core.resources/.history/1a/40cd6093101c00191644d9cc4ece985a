#include "push_buttons.h"
#include "stdio.h"

static volatile unsigned int *const push_buttons = (unsigned int*) (GPIO_BASE_ADDRESS);



int push_button_check(){

		if(*push_buttons == push_button_up) {
			return push_button_up;
		}else if (*push_buttons == push_button_down) {
			return push_button_down;
		}else if (*push_buttons == push_button_mid) {
			return push_button_down;
		}else return 0;
}

