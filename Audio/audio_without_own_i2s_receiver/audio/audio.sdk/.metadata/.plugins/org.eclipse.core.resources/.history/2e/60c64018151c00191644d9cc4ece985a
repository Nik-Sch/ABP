#include "push_buttons.h"
#include "stdio.h"

int checkout_push_buttons(){
	unsigned int a,b = 0;
	while(1){

		unsigned int a = *push_buttons;
		if (a == push_button_up && a != b){
			return push_button_up;
			b = a;
			while(b == a) {
				a = *push_buttons;
			}
			b = 0;
		}

		if (a == push_button_down && a != b){
			return push_button_down;
					b = a;
					while(b == a) {
						a = *push_buttons;
					}
					b = 0;
		}
		if (a == push_button_mid && a != b){
			return push_button_mid;
					b = a;
					while(b == a) {
						a = *push_buttons;
					}
					b = 0;
				}

	}
}

void check_switch_test(){
	unsigned int a = 0;
	while(1){
		a = checkout_push_buttons();
		switch(a){
		case push_button_up:
			printf("up\n");
			break;
		}
	}
}
